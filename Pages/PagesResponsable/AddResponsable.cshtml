@page
@model obligatorio.Pages.PagesResponsable.AddResponsableModel
<div class="text-center">
    <h1 class="display-4" style="font-size: 40px">Agregar Responsable</h1>
    <form method="post">
        <div class="form-group">
            <label for="idRespon">Id:</label>
            <input type="text" class="form-control" id="idRespon" name="idRespon">
        </div>
        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <input type="text" class="form-control" id="nombre" name="nombre">
        </div>
        <div class="form-group">
            <label for="telefono">Telefono:</label>
            <input type="text" class="form-control" id="telefono" name="telefono">
        </div>
        <button type="submit" class="btn btn-primary" asp-page-handler="AddResponsable">Agregar Responsable</button>
    </form>

</div>
